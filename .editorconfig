root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.twig]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 4
